
/* 轮播图样式 */

swiper{
  width:100%;
  height:384rpx;  
}
swiper image{
  width:100%;
  height:384rpx;  
}

/* 文章列表页面样式 */
.post-container{
  flex-direction: column;
  display: flex;
  margin:0 0 40rpx;
  background-color:#fff;
  border-bottom:1px solid #ededed;
  border-top:1px soild #ededed;
  padding-bottom:5px;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  display:flex;
  flex-direction: row;
  align-items:center;
}
.post-author-date image{
width:60rpx;
height:60rpx;
}
.post-author-date text{
margin-left:20rpx;
}
.post-image{
  width:100%;
  height:384rpx;
  margin-bottom:15px;
}
.post date{
  font-size:26rpx;
  margin-bottom:10px;
}
.post-title{
  font-size:16px;
  font-weight:600;
  color:#333;
  margin-bottom:10px;
  margin-left:10px;
}
.post-content{
  color:#666;
  font-size:26rpx;
  margin-bottom:20rpx;
  margin-left:20rpx;
  letter-spacing:2rpx;
  line-height:40rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  font-size:13px;
  line-height:16px;
  margin-left:10px;
  align-items:center;
}
.post-like image{
  height:16px;
  width:16px;
  margin-right:20px;
}
.post-like text{
  margin-right:20px;
}
